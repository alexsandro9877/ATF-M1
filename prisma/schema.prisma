

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "postgresql"
  // url      = env("DATABASE_URL")
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
  //  url      = env("POSTGRES_POSTGRES_URL")
  // directUrl = env("POSTGRES_URL_NON_POOLING")

}

model SettingBase {
  cod_base       Int @id @default(autoincrement())
  desc_grupo    String
  desc_subgrupo String
  name          String
  description   String
  state         String? @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  settings      Settings[] 
  @@map("setting_base") 
}

model Settings {
  cod_base     Int  
  id           Int @id @default(autoincrement())
  name         String
  description  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  state        Boolean @default(true)
  settingBase  SettingBase @relation(fields: [cod_base], references: [cod_base]) 

  @@map("settings") 
}


model Finalizadora {
  id                     Int      @id @default(autoincrement()) 
  cod_int_sap_sim        String   @map("cod_int_sap_sim")
  cod_rede               String?  @map("cod_rede")
  desc_rede              String?  @map("desc_rede")
  cod_bandeira           String?  @map("cod_bandeira")
  desc_bandeira          String?  @map("desc_bandeira")
  data_cadastro          DateTime @default(now())
  data_ultima_modificacao DateTime @updatedAt
  user_id_mod            String   @map("user_id_mod")
  desc_finalizadora      String   @map("desc_finalizadora")
  cod_finalizadora       Int      @map("cod_finalizadora")
  tipo_crtl              String   @map("tipo_crtl")
  ind_status             Boolean  @map("ind_status")

  @@map("finalizadora")
}
